@startuml
class Person {
    - id: Int
    - surname: String
    - name: String
    - git: String?
    - contact: String?
    --
    + getSurnameAndInitials(): String
    + getContactInfo(): String
    + hasGit(): Boolean
    + hasContact(): Boolean
    + validate(): Boolean
    + displayInfo(): Unit
}

class Student {
    - patronymic: String?
    - phone: String?
    - telegram: String?
    - email: String?
    --
    + displayInfo(): Unit
    + validate(): Boolean
    --
    + hasGit(): Boolean
    + hasContact(): Boolean
}

class Student_short {
    --
    + displayInfo(): Unit
}

class Factory {
    + validateGit(git: String): Boolean
    + validatePhone(phone: String): Boolean
    + validateTelegram(telegram: String): Boolean
    + validateEmail(email: String): Boolean
}

Person <|-- Student
Person <|-- Student_short
Person -down-> Factory : <<companion object>>

@enduml
